<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item

        android:state_pressed="true"  android:color="#ffffff">
        <shape android:shape="rectangle" >
            <solid android:color="@android:color/transparent"/>
            <stroke android:width="12dp" android:color="#FFFFFF" />
            <corners android:radius="8dp"/>
        </shape>
    </item>
    <item android:state_enabled="true" android:color="#ffffff">
        <shape android:shape="rectangle" android:color="#ffffff">
            <solid android:color="@android:color/transparent"/>
            <stroke android:width="12dp" android:color="#FFFFFF" />
            <corners android:radius="8dp"/>
        </shape>
    </item>

    <item android:state_enabled="false" android:color="#404040">
        <shape android:shape="rectangle" android:color="#404040">
            <solid android:color="@android:color/transparent"/>
            <stroke android:width="12dp" android:color="#404040" />
            <corners android:radius="8dp"/>
        </shape>
    </item>
</selector>