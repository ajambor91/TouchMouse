<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
>
    <TextView
        android:layout_marginTop="30dp"
        android:id="@+id/settings_header_text"
        android:layout_width="match_parent"
        android:textSize="20dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text="Settings:" />


    <TextView
        android:id="@+id/settings_ipaddr_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:text="Mouse name:" />

    <EditText
        android:id="@+id/mouseName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:gravity="center"
        android:ems="10"
        android:inputType="text"
        android:text="Name"
      />
    <Button

        android:textColor="@drawable/button"
        android:background="@drawable/button"
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:text="Change name" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:backgroundTint="@drawable/button"
        android:textColor="@drawable/button"
        android:background="@drawable/button"
        android:id="@+id/button_manage_host"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manage selected host" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
    <Button
        android:backgroundTint="@drawable/button"
        android:textColor="@drawable/button"
        android:background="@drawable/button"
        android:id="@+id/settings_back_btn"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back" />
</LinearLayout>